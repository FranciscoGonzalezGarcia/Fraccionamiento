<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcVwCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/recycler_padding">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>
    <TextView
        android:id="@+id/lblNotCalendarFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_element_found"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/rubik_medium"
        android:visibility="invisible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddNewCalendar"
        android:layout_width="@dimen/floating_button"
        android:layout_height="@dimen/floating_button"
        android:layout_gravity="bottom|end"
        android:layout_margin="15dp"
        android:src="@drawable/ic_add_calendar"
        android:foreground="?android:attr/selectableItemBackground"
        />



</FrameLayout>