<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activities.Admin.EditUserActivity"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_span"
            android:fontFamily="@font/rubik_medium"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="15dp"/>


        <EditText
            android:id="@+id/txtEditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_span"
            android:textSize="18sp"
            android:fontFamily="@font/rubik_light"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_name_spn"
            android:fontFamily="@font/rubik_medium"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="15dp"/>


        <EditText
            android:id="@+id/txtEditUserLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/last_name_spn"
            android:textSize="18sp"
            android:fontFamily="@font/rubik_light"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_spn"
            android:fontFamily="@font/rubik_medium"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="15dp"/>


        <EditText
            android:id="@+id/txtEditEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_spn"
            android:textSize="18sp"
            android:fontFamily="@font/rubik_light"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rent_cost_month"
            android:fontFamily="@font/rubik_medium"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="15dp"/>


        <EditText
            android:id="@+id/txtEditRent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rent_cost_month"
            android:textSize="18sp"
            android:fontFamily="@font/rubik_light"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monthly_maintenance_cost"
            android:fontFamily="@font/rubik_medium"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="15dp"/>


        <EditText
            android:id="@+id/txtEditMaintenance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/monthly_maintenance_cost"
            android:textSize="18sp"
            android:fontFamily="@font/rubik_light"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"/>

