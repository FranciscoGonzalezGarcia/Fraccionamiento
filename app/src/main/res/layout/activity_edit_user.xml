        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/build"
                    android:fontFamily="@font/rubik_medium"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="15dp"/>

                <EditText
                    android:id="@+id/txtEditBuild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/build"
                    android:textSize="18sp"
                    android:fontFamily="@font/rubik_light"
                    android:layout_marginBottom="15dp"
                    android:inputType="number"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/department"
                    android:fontFamily="@font/rubik_medium"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="15dp"/>

                <EditText
                    android:id="@+id/txtEditDept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/department"
                    android:textSize="18sp"
                    android:fontFamily="@font/rubik_light"
                    android:layout_marginBottom="15dp"
                    android:inputType="number"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cut_day"
                    android:fontFamily="@font/rubik_medium"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="15dp"/>
                <EditText
                    android:id="@+id/txtEditDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/cut_day"
                    android:textSize="18sp"
                    android:fontFamily="@font/rubik_light"
                    android:layout_marginBottom="15dp"
                    android:inputType="number"/>

            </LinearLayout>




        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnSaveUser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_save"
                android:layout_marginEnd="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                />

            <Button
                android:id="@+id/btnDeleteUser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_delete_black_red"
                android:layout_marginStart="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                />


        </LinearLayout>


    </LinearLayout>




</androidx.core.widget.NestedScrollView>